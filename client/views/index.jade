doctype html
html(ng-app="libraryApp")
  head
    block title
      title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    link(rel="stylesheet" href="/css/normalize.css")
    link(rel="stylesheet" href="/css/foundation.min.css")
    link(rel="stylesheet" href="/css/icons/foundation-icons.css")
    link(rel='stylesheet' href='/css/app.css')
  body(ng-controller="TopBarDemoCtrl")
    div.contain-to-grid
      div
        top-bar
          ul.title-area
            li.name
              h1
                a(href="#") My Library
            li(toggle-top-bar class="menu-icon")
                a
                  span Menu

          top-bar-section
            ul.right
              li
                a(href="#/") Home
              li
                a(href="#/books/add") Add Book


    div.row(ng-controller="MsgController")
      div(ng-show="msg != null" class="alert-box {{ msg.type }}") {{ msg.text }}
      div.small-12.columns(ng-view)


    script(src="/js/angular.min.js")
    script(src="/js/angular-route.min.js")
    script(src="/js/mm-foundation-0.3.0.min.js")
    script(src="/app.js")