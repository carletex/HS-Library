extends layout

block title
    title Books | HS Library
block content
  h1 All books
  if addedBook
      //- ToDO: pass a msg to the template
      p.info #{addedBook} has been added to the Collection!
  if books
    each book in books
      li
        a(href='/books/#{book._id}') #{book.title}
        span (Shelf: #{book.shelf})
        a(href='/books/edit/#{book._id}') [edit]
        a(href='/books/delete/#{book._id}') [delete]