extends layout

block title
  title Add book | HS Library

block content
  form(name="add", action="/books", method="post")
    label Title:
    if book
        input(type="text", name="title" value="#{book.title}")
        input(type="text", name="_id" value="#{book._id}" hidden)

        input(type="submit", value="Update")
    else
        input(type="text", name="title")
        input(type="submit", value="Add")