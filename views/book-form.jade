extends layout

block title
  title Add book | HS Library

block content
  form(name="add", action="/books", method="post")
    if book
        label Title:
        input(type="text", name="title" value="#{book.title}")
        label Shelf:
        input(type="text", name="shelf" value="#{book.shelf}")
        input(type="text", name="_id" value="#{book._id}" hidden)
        input(type="submit", value="Update")
    else
        label Title:
        input(type="text", name="title")
        label Shelf:
        input(type="text", name="shelf")
        input(type="submit", value="Add")